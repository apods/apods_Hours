<div class="form-item">
  <%= f.label :event, "Event Name" %>
  <%= f.text_field :event %>
</div>
<div class="form-item">
  <%= f.label :hours, "Number of Hours" %>
  <%= f.text_field :hours %>
</div>
<div class="form-item">
  <%= f.label :date, "Date of Event" %>
  <%= f.text_field :date %>
</div>
<div class="form-item">
  <%= f.label :area_of_service, 'Area of Service' %>
  <%= f.select :area_of_service, ['Campus', 'Community', 'Fraternity', 'National'] %>
</div>
<div class="form-item">
  <%= f.label :description, "Description (optional)" %>
  <%= f.text_area :description, :rows => 4 %>
</div>
<div class="form-submit">
  <%= f.submit "Done!" %>
</div>
